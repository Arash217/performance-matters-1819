{
  "name": "performance-matters-1819",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon server.js -e hbs,css",
    "prebuild": "rimraf public/css public/js && make-dir public/css public/js",
    "minify:css": "cleancss -O2 -o public/css/main.min.css resources/css/main.css",
    "minify:svg": "svgo -f public/images/flags",
    "minify:js": "uglifyjs resources/js/*.js -c -m -o public/js/all.min.js",
    "minify": "run-p minify:css minify:js",
    "compress:css": "bread-compressor --brotli-quality=11 public/css",
    "compress:svg": "bread-compressor --brotli-quality=11 public/images/flags",
    "compress:js": "bread-compressor --brotli-quality=11 public/js",
    "compress": "run-p compress:css compress:js",
    "revision:css": "node-file-rev public/css/main.min.css -m=public/rev-manifest.json -r=public/",
    "revision:js": "node-file-rev public/js/all.min.js -m=public/rev-manifest.json -r=public/",
    "revision": "run-p revision:css revision:js",
    "generate:sw": "sw-precache --config=./sw-precache-config.js",
    "build:css": "run-s minify:css revision:css compress:css",
    "build:js": "run-s minify:js revision:js compress:js",
    "build": "npm-run-all prebuild -p build:css build:js -s generate:sw",
    "start": "npm run build && node server.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^7.0.0",
    "koa": "^2.7.0",
    "koa-body": "^4.1.0",
    "koa-compose": "^4.1.0",
    "koa-compress": "^3.0.0",
    "koa-hbs": "^1.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "node-fetch": "^3.1.1"
  },
  "devDependencies": {
    "bread-compressor-cli": "^1.0.5",
    "clean-css-cli": "^4.2.1",
    "koa-manifest-rev": "^0.3.0",
    "make-dir-cli": "^2.0.0",
    "node-file-rev": "^1.1.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "svgo": "^1.2.0",
    "sw-precache": "^5.2.1",
    "uglify-es": "^3.3.9"
  }
}
